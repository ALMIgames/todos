<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_todo_add"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:id="@+id/todo_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:hint="Title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text="todo_priority" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/todo_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/prioritat_alta"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:drawableLeft="@drawable/prioritat_alta"
            android:drawablePadding="6dp"
            android:button="@null"
            android:background="@android:color/transparent"

            android:paddingRight="18dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

        <RadioButton
            android:id="@+id/prioritat_mitja"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:drawableLeft="@drawable/prioritat_mitja"
            android:drawablePadding="6dp"
            android:button="@null"
            android:background="@android:color/transparent"

            android:paddingRight="18dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

        <RadioButton
            android:id="@+id/prioritat_baixa"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:drawableLeft="@drawable/prioritat_baixa"
            android:drawablePadding="6dp"
            android:button="@null"
            android:background="@android:color/transparent"

            android:paddingRight="18dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
    </RadioGroup>


</LinearLayout>